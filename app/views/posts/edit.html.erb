<p style="text-align:right">
  <% if current_user %>
  Logged in as: <%= current_user.email.split('@')[0] %>
  <%= link_to 'Logout', logout_path, :method => 'Destroy' %>
  <% else %>
  <%= link_to 'Login', login_path %> OR  
  <%= link_to 'Sign Up', signup_path %>
  <% end %>
</p>
<% if flash[:notice] -%>
  <p class='notice'><%= flash[:notice] %></p>
<% end %>
<% if flash[:error] -%>
  <p class='notice'><%= flash[:error] %></p>
<% end %>
<h1>Edit Your Post</h1>

<%= form_for @post do |f| %>
  
  <p>
    <%= f.label "Post Title" %><br />
    <%= f.text_field  :title %>
  </p>
  <p>
    <%= f.label "Content" %><br />
    <%= f.text_area  :content %>
  </p>
  <p>
    <%= f.label "Active Post Yes/No" %><br />
    <%= f.select(:active, options_for_select([['Yes', 1], ['No', 0]], 2)) %>
  </p>

  <p class="button"><%= f.submit "Edit "%></p>
<% end %>
