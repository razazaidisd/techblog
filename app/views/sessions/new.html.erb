<% if flash[:notice] -%>
  <p class='notice'><%= flash[:notice] %></p>
<% end %>
<% if flash[:alert] -%>
  <p class='error'><%= flash[:alert] %></p>
<% end %>
<h1>Log In</h1>
<%= form_tag sessions_path do %>

<p>
	<%= label_tag "Email:" %><br />
	<%= text_field_tag :email %>
</p>
<p>
	<%= label_tag "Password" %><br />
	<%= password_field_tag  :password %>
</p>
<p>
	<%= submit_tag 'Login' %>
</p>
<% end %>
<p>Don't have an Account, be a member by just one click <%= link_to 'SignUp', signup_path %></p>
<br>
<p> <%= link_to 'Back to Posts', posts_path %> </p>